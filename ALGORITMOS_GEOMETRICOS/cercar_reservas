#include <iostream>
#include <cmath>
using namespace std;

struct Ponto {
    double x, y;
};

// Função para ordenar pontos (Bubble Sort)
void ordenar(Ponto p[], int n) {
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (p[j].x > p[j+1].x ||
               (p[j].x == p[j+1].x && p[j].y > p[j+1].y))
            {
                Ponto temp = p[j];
                p[j] = p[j+1];
                p[j+1] = temp;
            }
        }
    }
}

// Produto vetorial
double cross(Ponto a, Ponto b, Ponto c) {
    return (b.x - a.x)*(c.y - a.y) - (b.y - a.y)*(c.x - a.x);
}

// Distância entre dois pontos
double dist(Ponto a, Ponto b) {
    return sqrt((a.x - b.x)*(a.x - b.x) + (a.y - b.y)*(a.y - b.y));
}

int main() {
    int n;
    cin >> n;

    Ponto p[1000];   // Entrada (máx 1000 pontos)
    Ponto hull[1000]; // Fecho convexo
    int h = 0;       // Tamanho do hull

    // Lê os pontos
    for (int i = 0; i < n; i++) {
        cin >> p[i].x >> p[i].y;
    }

    // Ordenar os pontos
    ordenar(p, n);

    // Construir parte inferior do fecho convexo
    for (int i = 0; i < n; i++) {
        while (h >= 2 && cross(hull[h-2], hull[h-1], p[i]) <= 0) {
            h--;
        }
        hull[h++] = p[i];
    }

    // Construir parte superior
    int base = h;
    for (int i = n - 2; i >= 0; i--) {
        while (h > base && cross(hull[h-2], hull[h-1], p[i]) <= 0) {
            h--;
        }
        hull[h++] = p[i];
    }

    h--; // Remove ponto duplicado final

    // Calcula perímetro do fecho convexo
    double perimetro = 0;
    for (int i = 0; i < h; i++) {
        perimetro += dist(hull[i], hull[(i+1) % h]);
    }

    // Arredonda para cima
    cout << ceil(perimetro);

    return 0;
}
